# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                                                   controllers.HomeController.articles(section = "news", timestamp = "", page: Int = 1, ajax: Option[String])
GET     /$section<blogs>                                                    controllers.HomeController.articles(section, timestamp = "", page: Int = 1, ajax: Option[String])
GET     /t/$timestamp<\d{8}T\d{6}.\d{3}Z>                                   controllers.HomeController.articles(section = "news", timestamp, page: Int = 1, ajax: Option[String])
GET     /$section<blogs>/t/$timestamp<\d{8}T\d{6}.\d{3}Z>                   controllers.HomeController.articles(section, timestamp, page: Int = 1, ajax: Option[String])
GET     /t/$timestamp<\d{8}T\d{6}.\d{3}Z>/p/$page<\d+>                      controllers.HomeController.articles(section = "news", timestamp, page: Int, ajax: Option[String])
GET     /$section<blogs>/t/$timestamp<\d{8}T\d{6}.\d{3}Z>/p/$page<\d+>      controllers.HomeController.articles(section, timestamp, page: Int, ajax: Option[String])
GET     /about                                                              controllers.HomeController.about

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
