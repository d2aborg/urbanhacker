# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       controllers.HomeController.articles(section = "news", timestamp = "", page: Int = 1)
GET     /$section<blogs>                        controllers.HomeController.articles(section, timestamp = "", page: Int = 1)
GET     /t/:timestamp                           controllers.HomeController.articles(section = "news", timestamp, page: Int = 1)
GET     /$section<blogs>/t/:timestamp           controllers.HomeController.articles(section, timestamp, page: Int = 1)
GET     /t/:timestamp/p/:page                   controllers.HomeController.articles(section = "news", timestamp, page: Int)
GET     /$section<blogs>/t/:timestamp/p/:page   controllers.HomeController.articles(section, timestamp, page: Int)
GET     /about                                  controllers.HomeController.about

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
